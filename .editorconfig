# EditorConfig é incrível: http://EditorConfig.org

root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4

[*.{html,css,js,md}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[Dockerfile]
indent_size = 4
